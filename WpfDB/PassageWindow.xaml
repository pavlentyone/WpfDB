<Window x:Class="WpfDB.PassageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PassageWindow" Height="300" Width="300"
        MinHeight="200" MinWidth="300"
        Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Button Name="InsertButton" Content="Вставить" Margin="5" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="1" Grid.RowSpan="1" Click="InsertButton_Click"></Button>
        <Button Name="DeleteButton" Content="Удалить" Margin="5" Grid.Column="1" Grid.Row="0" Grid.ColumnSpan="1" Grid.RowSpan="1" Click="DeleteButton_Click"></Button>
        <Button Name="UpdateButton" Content="Изменить" Margin="5" Grid.Column="2" Grid.Row="0" Grid.ColumnSpan="1" Grid.RowSpan="1" Click="UpdateButton_Click"></Button>
        <DataGrid Name="passageDataGrid" SelectionMode="Single" SelectionUnit="FullRow" IsReadOnly="True" Margin="5" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="3" Grid.RowSpan="1"></DataGrid>

    </Grid>
</Window>

